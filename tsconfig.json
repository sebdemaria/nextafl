{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@hooks/*": ["./hooks/*"],
            "@components/*": ["./components/*"],
            "@styles/*": ["./styles/*"],
            "@public/*": ["./public/*"],
            "@httpServices/*": ["./httpServices/*"],
            "@stories/*": ["./stories/*"]
        },
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "components/UI/ButtonChakra.tsx",
        "components/UI/ButtonChakra/ButtonChakra.stories.tsx"
    ],
    "exclude": ["node_modules"]
}
